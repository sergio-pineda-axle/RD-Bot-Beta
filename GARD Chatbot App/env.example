# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint_here
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_GPT_DEPLOYMENT=your_gpt_deployment_name
AZURE_OPENAI_ADA_DEPLOYMENT=your_ada_deployment_name

# Azure Search Configuration
AZURE_SEARCH_ENDPOINT=your_azure_search_endpoint_here
AZURE_SEARCH_API_KEY=your_azure_search_api_key_here
AZURE_SEARCH_INDEX_NAME=your_search_index_name

# Application Configuration
DEBUG_MODE=false
LOG_LEVEL=INFO
MAX_QUERY_LENGTH=1000
MAX_RETRIEVAL_RESULTS=5

# Data Paths
DATA_DIR=../Data Preparation/Chatbot_Input_Files
VECTOR_STORE_PATH=./data/vector_store
EMBEDDINGS_CACHE_PATH=./data/embeddings_cache

# Security
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10
